<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity">

  <TextView
    android:id="@+id/options"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=""

    android:layout_marginTop="25dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <Button
    android:id="@+id/butt1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=""
    android:background="@drawable/trails_button"
    app:layout_constraintTop_toBottomOf="@+id/options"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>

  <Button
    android:id="@+id/butt2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=""
    android:background="@drawable/camping_button"
    app:layout_constraintTop_toBottomOf="@+id/butt1"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>

  <Button
    android:id="@+id/butt3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=""
    android:background="@drawable/comm_button"
    app:layout_constraintTop_toBottomOf="@+id/butt2"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>